{
  "extends": [
    "config:recommended",
    "docker:enableMajor"
  ],
  "configMigration": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "actions/checkout",
        "actions/cache",
        "actions/upload-artifact",
        "actions/download-artifact",
        "actions/setup-node",
        "hadolint/hadolint-action"
      ],
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?"
    },
    {
      "matchPackageNames": [
        "webapp.3tier.k8s.parent:parent-pom"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/[^/]+\\.ya?ml$/"
      ],
      "matchStrings": [
        "uses: (?<depName>.*?)@(?<currentValue>.*?)\n"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)[^/]*\\.yaml$/"
    ]
  },
  "assignees": [
    "yurake"
  ],
  "timezone": "Asia/Tokyo",
  "labels": [
    "renovate"
  ]
}
